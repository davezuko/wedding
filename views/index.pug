      .col-6.col-md-3
        img.img-fluid(src="/images/nashville.jpg" alt="Carnton Plantation in Nashville, TN", title="Carnton Plantaion in Nashville, TN")
      .col-6.col-md-3
        img.img-fluid(src="/images/wedding.jpg" alt="Attending a wedding in Rochester, MI", title="Attending a wedding in Rochester, MI")
      .col-6.col-md-3
        img.img-fluid(src="/images/jackie-graduation.jpg" alt="Jackie graduation with her BSW" title="Jackie graduating with her BSW")

