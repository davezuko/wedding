      .hotel.mb-5
        h3 Royal Park Hotel
        hr
        .row
          .col-12.col-md-8
            dl.row.no-gutters
              +hotel-fact("Rate:", "$229/night")
              +hotel-fact("Address:", "600 E University Dr, Rochester, MI 48307")
              +hotel-fact("Phone:", "(248) 652-2600")
              +hotel-fact("Distance:", "1.3 miles")
            p.m-0(style="text-indent:0") Mention Kutcher/Zukowski wedding when booking.
          .d-none.d-md-flex.col-md-4
            +google-map("https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.0515202499632!2d-83.13102468417357!3d42.68145097916654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8824e9b6cae5167f%3A0xbeabaa9552529440!2sRoyal+Park+Hotel!5e0!3m2!1sen!2sus!4v1527301751286")
      .hotel
        h3.text-right Crowne Plaza Auburn Hills
        hr
        .row
          .d-none.d-md-flex.col-4
            +google-map("https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.8758328027393!2d-83.24701818417401!3d42.66398657916769!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8824c002175980b7%3A0x3b2af4a442f402c!2sCrowne+Plaza+Auburn+Hills!5e0!3m2!1sen!2sus!4v1527362662799")
