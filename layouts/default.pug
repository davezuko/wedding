mixin nav-item(title, href)
  li.nav-item
    a.nav-link(href=href)= title

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    title David and Jackie Are Getting Married
    meta(name="description" content="Jackie Kutcher and David Zukowski are getting married!")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="https://fonts.googleapis.com/css?family=Oswald|Raleway" rel="stylesheet")
    link(rel="stylesheet" href="/css/main.css")
  body
    header
      nav.navbar.navbar-expand-sm.navbar-light
        .container
          a.navbar-brand(href="/") Jackie & David
          .collapse.navbar-collapse
            ul.navbar-nav.ml-md-auto
              +nav-item("Our Story", "/#our-story")
              +nav-item("Venue", "/#the-venue")
              +nav-item("Registry", "/#our-registry")
      .header
        .container.text-center
          h1.header__title Jackie Kutcher & David Zukowski
          .header__subtitle
            span.d-block.d-md-inline-block September 22, 2018
            span.d-none.d-md-inline-block.ml-3.mr-3 &mdash;
            span.d-block.d-md-inline-block Rochester, MI
    main.container
      block content
    footer.container.text-center
      .row.justify-content-center
        .col-10
