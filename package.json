{
  "name": "wedding",
  "version": "1.0.0",
  "main": "views/index.pug",
  "license": "MIT",
  "scripts": {
    "compile": "npm run compile:css && npm run compile:html",
    "compile:css": "postcss css/main.css -o dist/css/main.css",
    "compile:html": "pug views --out dist",
    "make": "rm -rf dist && mkdir dist && npm run compile && cp -r public/* dist",
    "watch:html": "nodemon --exec \"npm run compile:html\" --ext js,pug --ignore dist",
    "start": "npm run make && npm run watch:html & npm run compile:css -- --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-cssnext": {},
      "cssnano": {
        "autoprefixer": false
      }
    }
  },
  "browserslist": [
    "last 2 versions",
    "IE 10",
    "IE 11"
  ],
  "dependencies": {
    "bootstrap": "^4.1.1",
    "cssnano": "^3.10.0",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
